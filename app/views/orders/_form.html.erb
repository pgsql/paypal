<div id="page">
  <div class="top"></div>
  <div class="content">
    <div class="header page">
      <h1>Step 1: Payment Page - Coupon</h1>
    </div>
    <div id="contact" class="padding">
      <br />

      <p>You have selected : <b> <%=session[:duration] %></b><br />
Actual Price is <b><%=session[:actual_price] %></b>&nbsp;&nbsp;<br/>
Discount on you coupon price :  <b><%=session[:coupon].to_i %> % </b><br />
Present Price is <b><%=session[:duration_price] %></b>&nbsp;&nbsp;
      <br />
      <%= link_to "Click to change the Subscription", coupons_form_orders_path %>
      </p>

     
       <% form_for @order do |f| %>
   <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

      <table width="90%">
    <tr>
      <td>

  <h3>Billing Address Details</h3>

  <p>
    <%= f.label :name, "Name *"%>
    <%= f.text_field :name,:class=> "text_field" %>
  </p>

  <p>
    <%= f.label :address1, "Address1 * "%>
    <%= f.text_field :address1,:class=> "text_field" %>
  </p>

  <p>
    <%= f.label :address2, "Address2"%>
    <%= f.text_field :address2,:class=> "text_field" %>
  </p>

  <p>
    <%= f.label :city, "City * "%>
    <%= f.text_field :city,:class=> "text_field" %>
  </p>

  <p>
    <%= hidden_field_tag :amount,session[:duration_price].to_s %>
    <%= hidden_field_tag :duration,session[:duration_months].to_s %>
  </p>

  <p>
    <%= f.label :state, "State * "%>
    <%= f.text_field :state,:class=> "text_field" %>
  </p>

  <p>
    <%= f.label :country, "Country * "%>
    <%= f.text_field :country ,:class=> "text_field"%>
  </p>

  <p>
    <%= f.label :zip, "Zip * "%>
    <%= f.text_field :zip,:class=> "text_field" %>
  </p>
 </td>
 <td>
  <h3>Credit Card Details</h3>

  <p>
    <%= f.label :card_type, "Card Type *"%>
    <%= f.select :card_type, [["Visa", "visa"], ["MasterCard", "master"], ["Discover", "discover"], ["American Express", "american_express"]],{},{:class=> "text_field"} %>
  </p>


  <p>
    <%= f.label :card_number, "Card Number *" %>
    <%= f.text_field :card_number ,:class=> "text_field"%>
  </p>

  <p>
    <%= f.label :card_verification, "Card Verification Value (CVV) *" %>
    <%= f.password_field :card_verification ,:class=> "text_field"%>
  </p>

  <p>
    <%= f.label :card_expires_on, "Card Expires on * " %>
    <%= f.date_select :card_expires_on, :discard_day => true, :start_year => Date.today.year, :end_year => (Date.today.year+10), :add_month_numbers => true ,:class=> "text_field" %>
  </p>
  <p>
    
 
<%= f.submit "Pay Here" %></p>
</td></tr></table>

      <%end %>

        
  </div>

  <div class="bottom"></div>

</div>





